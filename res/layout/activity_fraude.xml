<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Admin1">

    <ImageButton
        android:id="@+id/BtnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/ic_form_round_2"
        app:srcCompat="@drawable/ic_logo_menu"
        android:backgroundTint="@color/Admin2"/>

    <LinearLayout
        android:id="@+id/LayoutFraud"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/BtnMenu"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_button_round"
        android:backgroundTint="@color/Admin2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Fraud detection"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Username"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/LayoutFraud"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="ID "
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/ic_button_round"
            app:backgroundTint="@color/Admin3"/>
        <EditText
            android:id="@+id/EditUsernameFraude"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="username"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ic_form_round_2"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:backgroundTint="@color/Admin2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/FraudDate"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/Username"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/I_KM"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="Date"
            android:inputType="date"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/ic_button_round"
            app:backgroundTint="@color/Admin3"/>
        <EditText
            android:id="@+id/EditDateFraude"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="JJ-MM-AA"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ic_form_round_2"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:backgroundTint="@color/Admin2"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/FraudFuel"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/FraudDate"
        android:layout_marginTop="20dp">
        <TextView

            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="Fuel"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/ic_button_round"
            app:backgroundTint="@color/Admin3"/>
        <EditText
            android:id="@+id/EditFuel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="# L"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ic_form_round_2"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:backgroundTint="@color/Admin2"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnDetectionFraude"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/FraudFuel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/ic_button_round"
        android:text="Detection"
        android:textColor="@color/Admin2"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:backgroundTint="@color/white" />

    <Button
        android:id="@+id/TxtDetectionFraude"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/btnDetectionFraude"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/ic_button_round"
        android:text="Result"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:backgroundTint="@color/Admin2" />

</RelativeLayout>