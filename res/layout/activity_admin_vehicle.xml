<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Admin1">

    <ImageButton
        android:id="@+id/BtnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/ic_form_round_2"
        app:srcCompat="@drawable/ic_logo_menu"
        android:backgroundTint="@color/Admin2"/>

    <LinearLayout
        android:id="@+id/LayoutVehicleFleet"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/BtnMenu"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_button_round"
        android:backgroundTint="@color/Admin2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Vehicles Fleet"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutTrip"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/LayoutVehicleFleet"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/I_KM"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="@string/User1"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/ic_button_round"
            app:backgroundTint="@color/Admin3"/>
        <TextView
            android:id="@+id/FuelRate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="45 L"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ic_form_round_2"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:backgroundTint="@color/Admin2"/>
    </LinearLayout>

</RelativeLayout>