<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Theme1">

    <ImageButton
        android:id="@+id/BtnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/ic_form_round_2"
        app:srcCompat="@drawable/ic_logo_menu"/>

    <LinearLayout
        android:id="@+id/LayoutCons"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/BtnMenu"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_button_round"
        android:backgroundTint="@color/Theme2"

        >
        <TextView
            android:id="@+id/ViewCons"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/ViewConsUnit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/TripReport"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutTrip"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/LayoutCons"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/I_KM"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="@string/KT"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/ic_button_round"/>
        <TextView
            android:id="@+id/R_Km"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="45 km"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ic_form_round_2"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutCost"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/LayoutTrip"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:id="@+id/I_Cost"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="@string/CST"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/ic_button_round"/>
        <TextView
            android:id="@+id/R_Cost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="5 €"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ic_form_round_2"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:backgroundTint="@color/Star_4"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutAvCost"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/LayoutCost"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:id="@+id/I_AvCost"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="@string/AVCST"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/ic_button_round"/>
        <TextView
            android:id="@+id/R_AvCost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="5.2 €"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ic_form_round_2"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:backgroundTint="@color/Star_3"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutMinCost"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/LayoutAvCost"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:id="@+id/I_MinCost"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="@string/MINCST"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/ic_button_round"/>
        <TextView
            android:id="@+id/R_MinCost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="4.3 €"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ic_form_round_2"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:backgroundTint="@color/Star_5"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/YouWin"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_below="@+id/LayoutMinCost"
        android:layout_marginTop="15dp"
        >
        <TextView
            android:id="@+id/I_YouWin"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginHorizontal="10dp"
            android:text="You win 0,2 €"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/ic_button_round"
            android:backgroundTint="@color/Theme2"/>
        <TextView
            android:id="@+id/MrDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/MD"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/ic_form_round_2"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:backgroundTint="@color/Theme0"/>
    </LinearLayout>



</RelativeLayout>